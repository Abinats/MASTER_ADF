{
	"name": "PIVOT",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_ADLS_PIVOT_SRC",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "pivot1"
				},
				{
					"name": "aggregate1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          customer_id as string,",
				"          product_name as string,",
				"          sales as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"aggregate1 pivot(groupBy(customer_id = aggregate1@customer_id),",
				"     pivotBy(product_name),",
				"     {} = product_name,",
				"     columnNaming: '$N$V',",
				"     lateral: true,",
				"     partitionBy('hash', 1)) ~> pivot1",
				"source1 aggregate(groupBy(product_name,",
				"          customer_id),",
				"     sales = columns(sales)) ~> aggregate1"
			]
		}
	}
}