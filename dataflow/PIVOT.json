{
	"name": "PIVOT",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_ADLS_PIVOT_SRC",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "pivot1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          customer_id as string,",
				"          product_name as string,",
				"          sales as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 pivot(groupBy(customer_id),",
				"     pivotBy(product_name, ['mobile', 'refrigerator', 'washing']),",
				"     product_name_ = max(sales),",
				"          count_customer_id = count(customer_id),",
				"     columnNaming: '$N$V',",
				"     lateral: true,",
				"     partitionBy('hash', 1)) ~> pivot1"
			]
		}
	}
}