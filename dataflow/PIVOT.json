{
	"name": "PIVOT",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_ADLS_PIVOT_SRC",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "pivot1"
				},
				{
					"name": "MapDrifted1",
					"description": "Creates an explicit mapping for each drifted column"
				}
			],
			"scriptLines": [
				"source(output(",
				"          customer_id as string,",
				"          product_name as string,",
				"          sales as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 pivot(groupBy(customer_id),",
				"     pivotBy(product_name),",
				"     {} = count(customer_id),",
				"     columnNaming: '$N$V',",
				"     lateral: true,",
				"     partitionBy('hash', 1)) ~> pivot1",
				"pivot1 derive(salesmobile = toLong(byName('salesmobile')),",
				"          salesrefrigerator = toLong(byName('salesrefrigerator')),",
				"          saleswashing = toLong(byName('saleswashing'))) ~> MapDrifted1"
			]
		}
	}
}